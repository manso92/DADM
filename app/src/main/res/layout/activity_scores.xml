<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/layout_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_title_size"
        android:layout_marginRight="@dimen/margin_title_size"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/userTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/scores.user_title"
            android:textStyle="bold"
            android:textSize="@dimen/title_size"/>

        <TextView
            android:id="@+id/scoresTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/scores.score_title"
            android:textStyle="bold"
            android:textSize="@dimen/title_size"/>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/scores_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>