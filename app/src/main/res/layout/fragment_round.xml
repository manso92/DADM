<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <es.uam.eps.dadm.views.TableroView
            android:id="@+id/board_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"/>

        <TextView
            android:id="@+id/round_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_title_size"
            android:textAllCaps="true"
            android:textSize="@dimen/title_size" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/reset_round_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/margin_floating_button"
        android:layout_marginRight="@dimen/margin_floating_button"
        android:src="@drawable/restart_round"
        app:fabSize="normal" />
</android.support.design.widget.CoordinatorLayout>