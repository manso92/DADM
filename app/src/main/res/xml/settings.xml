<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings.game.title">
        <ListPreference
            android:defaultValue="@string/levelsDefault"
            android:entries="@array/levelsArray"
            android:entryValues="@array/levelsValues"
            android:key="boardsize"
            android:title="@string/settings.game.board_size.title"
            android:summary="@string/settings.game.board_size.summary" />
        <ListPreference
            android:defaultValue="@string/colorsDefault"
            android:entries="@array/colorsArray"
            android:entryValues="@array/colorsValues"
            android:key="colorscheme"
            android:title="@string/settings.game.color_scheme.title"
            android:summary="@string/settings.game.color_scheme.summary" />
        <CheckBoxPreference
            android:key="onlinegame"
            android:title="@string/settings.game.online.title"
            android:summary="@string/settings.game.online.summary" />
    </PreferenceCategory>
</PreferenceScreen>